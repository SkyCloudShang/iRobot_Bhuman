#!/sbin/runscript

depend() {
  after naoqi
  after sshd
}

start() {
  ebegin "Starting bhumand"
  if [ $(whoami) = nao ]; then
    /home/nao/bin/bhumand start
  elif [ ! -e /dev/sdb ]; then
    su -c "/home/nao/bin/bhumand start -b" - nao >/dev/null
  fi
  eend $?
}

stop() {
  ebegin "Stopping bhumand"
  /home/nao/bin/bhumand stop
  eend $?
}

restart() {
  stop
  start
}
