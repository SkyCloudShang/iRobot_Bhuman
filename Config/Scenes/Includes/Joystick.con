jc press 10 set representation:MotionRequest motion = kick; specialActionRequest = { specialAction = playDead; mirror = false; }; walkRequest = { mode = relativeSpeedMode; speed = { rotation = 0; translation = { x = 0; y = 0; }; }; target = { rotation = 0deg; translation = { x = 0; y = 0; }; }; walkKickRequest = { kickType = none; kickLeg = left; }; }; kickRequest = { kickMotionType = kickForwardFast; mirror = false; armsBackFix = false; autoProceed = false; offset = { x = 0; y = 0; }; speed = 0; boost = false; dynPoints = []; };

